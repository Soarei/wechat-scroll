/* 聊天内容 */
page {
    /* height: 100vh;
    overflow: hidden; */
}
.scroll-container {
    width: 100%;
    height: calc( 100vh - 0rpx);
    max-height: calc( 100vh - 0rpx);
    overflow: hidden;
    background-color: #f3f3f3;
}
.chatlist {
    width: 678rpx;
    margin: 0rpx auto;
}
.history {
    width: 100%;
    text-align: center;
    font-size: 22rpx;
    color: #999999;
    margin-top: 20rpx;
}
.chatlist .msg_item {
    display: flex;
    margin-top: 20rpx;
    flex-direction: column;
}
.chatlist .msg_item:first-child {
    margin-top: 0;
}
.chatlist .msg_item .sendtime {
    position: relative;
    text-align: center;
    padding: 10rpx 0;
    height: 20rpx;
    line-height: 10rpx;
    font-size: 24rpx;
    color: #999999;
}

.chatlist .msg_item .client {
    padding: 20rpx 35rpx;
    background-color: #5881fe;
    display: inline-block;
    color: #fff;
    box-shadow: 0rpx 0rpx 8rpx 0rpx rgba(0, 0, 0, 0.02);
    border-radius: 36rpx 0rpx 36rpx 36rpx;
    margin-left: auto;
}
.chatlist .msg_item .machine,
.chatlist .loading {
    padding: 20rpx 35rpx;
    background: #FFFFFF;
    box-shadow: 0rpx 0rpx 8rpx 0rpx rgba(0, 0, 0, 0.02);
    border-radius: 0rpx 36rpx 36rpx 36rpx;
    color: #333;
    margin-right: auto;
}

.total-container {
    position: fixed;
    top: 210rpx;
    left: 0rpx;
    width: 100%;
    height: calc(100vh - 560rpx);
    overflow: hidden;
    /* transform: rotate(360deg); */
}